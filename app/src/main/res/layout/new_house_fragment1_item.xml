<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/new_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ershou" />

    <TextView
        android:id="@+id/new_fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/new_image"
        android:text="new_fname"
        android:textColor="#000"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/new_fregion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_fname"
        android:layout_toRightOf="@id/new_image"
        android:text="new_fregion"

         />

    <TextView
        android:id="@+id/new_fpricedisplaystr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_fname"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/new_fregion"
        android:text="fpricedisplaystr"
        android:textColor="#9b0006"
         />
    <TextView
        android:layout_below="@id/new_fregion"
        android:id="@+id/new_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_toRightOf="@id/new_image"
        android:text="faddress"
        android:textColor="#000"
      />

    <LinearLayout
        android:id="@+id/new_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/new_address"
        android:layout_toRightOf="@id/new_image"/>

</RelativeLayout>
