<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:alpha="0.8"
    android:padding="10dp"
    android:background="#fff"
    android:gravity="center_vertical">

    <ImageView

        android:layout_centerVertical="true"
        android:id="@+id/new_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ershou" />

    <TextView

        android:id="@+id/new_fpricedisplaystr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_fname"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/new_image"
        android:text="fpricedisplaystr"
        android:textColor="#9b0006" />

    <TextView
        android:id="@+id/new_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_fpricedisplaystr"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/new_image"
        android:text="new_price" />


</RelativeLayout>
